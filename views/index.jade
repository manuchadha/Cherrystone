  body
    // Header
    header#top.header
      .text-vertical-center
        h2
          | Order sweets from famous and best bakeries near you in Bangalore!
          br
          br
          br
          br
          .btn-toolbar
            .btn-group.dropdown(style='left: 40%; right: auto;')
              button#citydropdown.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown',aria-haspopup="true", aria-expanded="true", style='background-color: white;width: 100%;height: 40px;text-align: center;')
                | Select City
                span.caret
              ul.dropdown-menu.dropdown-menu-left(role='menu', aria-labelledby='citydropdown')
                li(role='presentation')
                  a(href="#" data-value="Bangalore") Bangalore
                li(role='presentation')
                    a(href="#" data-value="Chennai") Chennai
            .btn-group.dropdown(style='left: 40%; right: auto;')
              button#localitydropdown.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown',aria-haspopup="true", aria-expanded="true", style='background-color: white;width: 100%;height: 40px;text-align: center;')
                    | Select Locality
                    span.caret
                ul.dropdown-menu.dropdown-menu-left(role='menu', aria-labelledby='localitydropdown')
                    li(role='presentation')
                        a(href="#" data-value="Marathahalli") Marathahalli
                    li(role='presentation')
                        a(href="#" data-value="Bellandur") Bellandur
                    li(role='presentation')
                        a(href="#" data-value="Koramangala") Koramangala
                    li(role='presentation')
                        a(href="#" data-value="Mahadevapura") Mahadevapura
                    li(role='presentation')
                        a(href="#" data-value="SilkBoard") SilkBoard

